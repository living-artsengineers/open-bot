generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./storage-dev.sqlite"
}

model Message {
  id      BigInt   @id
  author  BigInt
  length  Int
  channel BigInt
  time    DateTime
  User    User     @relation(fields: [author], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([author], map: "idx_message__author")
}

model User {
  id          BigInt       @id
  username    String
  messages    Message[]
  quotes      Quote[]
  enrollments Enrollment[]
}

model Conversation {
  id     Int      @id @default(autoincrement())
  quotes Quote[]
  date   DateTime
}

model Quote {
  id           Int          @id @default(autoincrement())
  speaker      User         @relation(fields: [speakerId], references: [id])
  content      String
  conversation Conversation @relation(fields: [conversationId], references: [id])

  speakerId      BigInt
  conversationId Int
}

model Enrollment {
  id         Int    @id @default(autoincrement())
  student    User   @relation(fields: [studentId], references: [id])
  courseCode String
  section    Int
  // 2370, 2410, etc. (dictated by the UM SOC API)
  term       Int

  studentId BigInt
}
