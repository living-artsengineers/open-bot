generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./storage-dev.sqlite"
}

model Message {
  id      BigInt      @id
  author  BigInt
  length  Int
  channel BigInt
  time    DateTime
  User    User     @relation(fields: [author], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([author], map: "idx_message__author")
}

model User {
  id       BigInt    @id
  username String
  Message  Message[]
}
